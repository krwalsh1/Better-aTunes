<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${basedir}/build_resources</directory>
			<outputDirectory />
			<includes>
				<include>**.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/resources/</directory>
			<outputDirectory />
			<includes>
				<include>settings/**/**.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/win_tools</directory>
			<outputDirectory>/win_tools</outputDirectory>
			<includes>
				<include>**.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target/aTunes</directory>
			<outputDirectory />
			<includes>
				<include>**.*</include>
				<include>src/**/**.*</include>				
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target</directory>
			<outputDirectory />
			<includes>
				<include>aTunes.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>